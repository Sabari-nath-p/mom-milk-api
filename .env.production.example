# Production Environment Configuration for Mom's Milk API
# Copy this file to .env.production and update with your production values

# Database Configuration (Use strong passwords in production!)
DATABASE_URL="mysql://root:YOUR_STRONG_DATABASE_PASSWORD@mysql:3306/moms_milk"
MYSQL_ROOT_PASSWORD="YOUR_VERY_STRONG_ROOT_PASSWORD"
MYSQL_DATABASE="moms_milk"
MYSQL_USER="app_user"
MYSQL_PASSWORD="YOUR_STRONG_APP_PASSWORD"

# Application Configuration
NODE_ENV="production"
PORT=3000
API_PORT=3000

# JWT Configuration (Generate a secure secret!)
JWT_SECRET="YOUR_SUPER_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG"

# Authentication Configuration
DEFAULT_OTP="759409"

# Email Configuration (Required for production OTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"

# Application Features
ENABLE_SWAGGER=false  # Disable in production for security
ENABLE_CORS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting (Stricter in production)
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=50

# Logging
LOG_LEVEL="error"

# Security Headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH="/etc/ssl/certs/certificate.pem"
SSL_KEY_PATH="/etc/ssl/private/private-key.pem"

# Monitoring (Optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Backup Configuration (Optional)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
