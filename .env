# Environment Configuration for Mom's Milk API - Development

# Database Configuration
DATABASE_URL="mysql://root:password123@mysql:3307/moms_milk"
MYSQL_ROOT_PASSWORD="password123"
MYSQL_DATABASE="moms_milk"
MYSQL_USER="app_user"
MYSQL_PASSWORD="app_password"
MYSQL_PORT=3307

# Application Configuration
NODE_ENV="development"
PORT=3001
API_PORT=3001

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-development-change-in-production-min-32-chars"

# Authentication Configuration
DEFAULT_OTP="759409"

# Email Configuration (Optional - for OTP sending)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Admin Configuration (Optional)
ADMINER_PORT=8081

# Prisma Studio Configuration (Optional - for development)
PRISMA_STUDIO_PORT=5555

# Redis Configuration (Optional)
REDIS_PORT=6379

# API Configuration
API_VERSION=v1

# Development Tools
DEBUG_MODE=true
LOG_LEVEL="debug"

# Notification Configuration (Dummy values)
PUSH_NOTIFICATION_KEY="dummy-push-key-for-development"
FCM_SERVER_KEY="dummy-fcm-server-key"

# File Upload Configuration
MAX_FILE_SIZE="5mb"
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX="100"

# CORS Configuration  
CORS_ORIGIN="http://localhost:3001,http://localhost:3000"

# Health Check
HEALTH_CHECK_TIMEOUT="5000"

# Session Configuration
SESSION_SECRET="dummy-session-secret-key-for-development"
SESSION_TIMEOUT="24h"
