# Environment Configuration for Mom's Milk API - Production

# Database Configuration
DATABASE_URL="mysql://root:CHANGE_ME_ROOT_PASSWORD@mysql:3306/moms_milk"
MYSQL_ROOT_PASSWORD="CHANGE_ME_ROOT_PASSWORD"
MYSQL_DATABASE="moms_milk"
MYSQL_USER="app_user"
MYSQL_PASSWORD="CHANGE_ME_APP_PASSWORD"
MYSQL_PORT=3306

# Application Configuration
NODE_ENV="production"
PORT=3000
API_PORT=3000

# JWT Configuration (IMPORTANT: Change this to a strong secret)
JWT_SECRET="CHANGE_ME_JWT_SECRET_MIN_32_CHARS_FOR_PRODUCTION_SECURITY"

# Authentication Configuration
DEFAULT_OTP="759409"

# Email Configuration (Configure for production)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"

# Admin Configuration
ADMINER_PORT=8080

# API Configuration
API_VERSION=v1

# Production Settings
DEBUG_MODE=false
LOG_LEVEL="warn"

# Notification Configuration (Replace with real keys)
PUSH_NOTIFICATION_KEY="your-production-push-key"
FCM_SERVER_KEY="your-production-fcm-server-key"

# File Upload Configuration
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="/app/uploads"

# Rate Limiting (More restrictive for production)
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX="50"

# CORS Configuration (Update with your domain)
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Health Check
HEALTH_CHECK_TIMEOUT="10000"

# Session Configuration
SESSION_SECRET="CHANGE_ME_SESSION_SECRET_FOR_PRODUCTION"
SESSION_TIMEOUT="24h"

# SSL/HTTPS Configuration (if using reverse proxy)
FORCE_HTTPS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
