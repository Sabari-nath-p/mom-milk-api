# Environment Configuration for Mom's Milk API

# Database Configuration
DATABASE_URL="mysql://root:password123@mysql:3306/moms_milk"
MYSQL_ROOT_PASSWORD="password123"
MYSQL_DATABASE="moms_milk"
MYSQL_USER="app_user"
MYSQL_PASSWORD="app_password"
MYSQL_PORT=3306

# Application Configuration
NODE_ENV="development"
PORT=3000
API_PORT=3000

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-characters"

# Authentication Configuration
DEFAULT_OTP="759409"

# Email Configuration (Optional - for OTP sending)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Admin Configuration (Optional)
ADMINER_PORT=8080

# Prisma Studio Configuration (Optional - for development)
PRISMA_STUDIO_PORT=5555

# Redis Configuration (Optional)
REDIS_PORT=6379

# Application Features
ENABLE_SWAGGER=true
ENABLE_CORS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL="debug"

# Email Configuration (Optional - for OTP sending)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Default OTP (for testing and bypass)
DEFAULT_OTP="759409"

# API
API_VERSION=v1
